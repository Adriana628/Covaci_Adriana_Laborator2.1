@model IEnumerable<Covaci_Adriana_Laborator2.Models.Book>

@{
    ViewData["Title"] = "Books Index";
}

<p>
    <a asp-controller="Books" asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Price</th>
            <th>Genre</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@(item.Author != null ? item.Author.FirstName + " " + item.Author.LastName : "No author")</td>
                <td>@item.Price</td>
                <td>@(item.Genre != null ? item.Genre.Name : "No genre")</td>
                <td>
                    <a asp-controller="Books" asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-controller="Books" asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-controller="Books" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
